<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_centerVertical="false"
    android:background="@drawable/layerlist"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/barra"
        android:layout_width="10dp"
        android:layout_height="155dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent" />


    <TextView
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/barra"
        android:ellipsize="end"
        android:maxLength="120"
        android:maxLines="2"
        android:text="Titulo"
        android:textSize="24dp"
        android:textColor="@android:color/black" />


    <ImageView
        android:id="@+id/linha"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"

        android:layout_below="@+id/nome"
        android:layout_toRightOf="@+id/barra"
        android:background="@color/fundo_tab" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/linha"
        android:layout_toRightOf="@+id/barra"
        android:textColor="@android:color/black"
        android:textSize="36dp"
        android:text="data" />

    <TextView
        android:id="@+id/ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/linha"
        android:layout_toRightOf="@+id/data"
        android:text="Ano"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-9dp"
        android:layout_below="@+id/data"
        android:layout_toRightOf="@+id/barra"
        android:text="Categoria"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/categoria"
        android:layout_toRightOf="@+id/barra"
        android:text="descriÃ§ao"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/cat_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linha"

        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/evento_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tag"
        android:visibility="invisible" />


</RelativeLayout>
